@{
}
<div class="conatiner">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("User Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("username")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Password")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("password")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
           <input type="submit" value="Save" class="btn btn-success"/>
        </div>
    </div>
    <p>
        @if(ViewBag.Message!=null)
        {
            @ViewBag.Message
        }
    </p>
    @{Html.EndForm();}
</div>